<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="url"
            type="java.lang.String" />
    </data>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:actualImageUri="@{url}"
        app:placeholderImage="@drawable/user_logo"
        app:placeholderImageScaleType="focusCrop"
        app:progressBarAutoRotateInterval="300"
        app:progressBarImage="@drawable/icon_progress_bar"
        app:progressBarImageScaleType="centerInside"
        app:viewAspectRatio="1.33" />

</layout>